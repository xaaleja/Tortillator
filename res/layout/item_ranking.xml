<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ra_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ra_pos"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ra_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ra_bar"
        android:layout_marginRight="34dp"
        android:text="7.5"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/ra_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ra_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="2"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ra_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ra_pos"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
