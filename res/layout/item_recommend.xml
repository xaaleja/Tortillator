<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/RootView">

    <ImageView
        android:id="@+id/rec_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/rec_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rec_image"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/rec_image"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rec_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rec_bar"
        android:layout_marginLeft="53dp"
        android:layout_toRightOf="@+id/rec_bar"
        android:text="6.4"
        android:textSize="20sp"
        android:textStyle="italic" />

</RelativeLayout>
