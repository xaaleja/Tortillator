<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/com_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="50dp"
        android:text="Large Text"
									/>

    <TextView
        android:id="@+id/com_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/com_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/com_by"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/com_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/com_by"
        android:layout_alignBottom="@+id/com_by"
        android:layout_toRightOf="@+id/com_by"
        android:text="TextView" />

    <TextView
        android:id="@+id/com_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/com_username"
        android:layout_alignBottom="@+id/com_username"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
